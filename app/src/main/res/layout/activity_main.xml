<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo"
        android:maxWidth="200dp"
        android:maxHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoapk" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_pilihan_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Menu"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Kalkulator -->
                    <ImageView
                        android:id="@+id/icon_calculator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_kalkulator"
                        android:layout_gravity="center" />

                    <Button
                        android:id="@+id/btn_calculator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kalkulator"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@android:color/darker_gray"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" />

                    <!-- Scan QR -->
                    <ImageView
                        android:id="@+id/icon_scan_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_qr"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/btn_scan_qr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan QR"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@android:color/darker_gray"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" />

                    <!-- Peta -->
                    <ImageView
                        android:id="@+id/icon_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_map"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/btn_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peta"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@android:color/darker_gray"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" />

                    <!-- Adiwiyata -->
                    <ImageView
                        android:id="@+id/icon_adiwiyata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/logosmk"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/btn_adiwiyata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adiwiyata"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@android:color/darker_gray"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" />

                    <!-- ToDo List -->
                    <ImageView
                        android:id="@+id/icon_todolist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="70dp"
                        android:maxHeight="70dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_todolist"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/btn_todolist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ToDo List"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:background="@android:color/darker_gray"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
